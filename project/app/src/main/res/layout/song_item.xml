<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androix.cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgMusicWrapper"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/imgSong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignStart="@+id/txtArtist"
        android:layout_alignLeft="@+id/txtArtist"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Song Name"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

    <TextView
        android:id="@+id/txtArtist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/imgMusicWrapper"
        android:text="Singer Name"
        android:textColor="@color/white_faint"
        android:textSize="15dp" />

</RelativeLayout>